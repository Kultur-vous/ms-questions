{
    "compilerOptions": {
      "target": "ES2015",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noImplicitAny": false
    },
    "include": ["./models/**.ts"],
    "exclude": ["./node_modules"],
    "typeRoots": [ "../node_modules/@types", "@types" ]
  }